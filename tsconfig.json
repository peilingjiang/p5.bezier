{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es2015", "dom"],
		"module": "es6",
		"moduleResolution": "node",
		"declaration": true,
		"rootDir": "./src",
		"outDir": "./lib",
		"declarationDir": "./lib",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
